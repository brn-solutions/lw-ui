{
  "name": "brn-solutions/lw-ui",
  "description": "Livewire 3 + Tailwind 4 UI components for Laravel",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "laravel/framework": "^11.0",
    "livewire/livewire": "^3.0"
  },
  "require-dev": {
    "laravel/pint": "^1.14",
    "orchestra/testbench": "^9.0",
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "BrnSolutions\\LwUi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BrnSolutions\\LwUi\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "BrnSolutions\\LwUi\\Providers\\LwUiServiceProvider"
      ]
    }
  },
  "scripts": {
    "lint": "vendor/bin/pint",
    "test": "vendor/bin/pest"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
